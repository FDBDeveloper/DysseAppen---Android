<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88000000"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:baselineAligned="false">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:layout_marginBottom="9dp"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">


            <TextView tools:ignore="MissingPrefix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fontPath="fonts/CenturyGothic-Bold.ttf"
                android:id="@+id/dyssa_question_title"
                android:textSize="19sp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:textColor="#a3f0ff"
                android:textIsSelectable="false" />

        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="0.1"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="9dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dyssa_question_answericon"
            android:src="@drawable/played"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:visibility="invisible"
            android:layout_marginRight="2dp"
            android:contentDescription="@string/pod_playedicon_description" />
    </RelativeLayout>

</LinearLayout>